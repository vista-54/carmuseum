<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pixelsgo.carmuseum" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="BLE">
        <param name="android-package" value="com.evothings.BLE" />
    </feature>
    <feature name="LocationManager">
        <param name="android-package" value="com.unarin.cordova.beacon.LocationManager" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <plugins>
        <plugin name="Indoors" value="com.phonegap.plugins.Indoors" />
    </plugins>
    <name>carmuseum</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
</widget>
